{
  "category_id": "nda",

  "templates": [
    {
      "id": "nda_standard",
      "name": "Договір нерозголошення (стандартний)",
      "file": "Договір нерозголошення.docx"
    }
  ],

  "roles": {
    "disclosing_party": {
      "label": "Розкриваюча сторона",
      "allowed_person_types": ["individual", "fop", "company"]
    },
    "receiving_party": {
      "label": "Приймаюча сторона",
      "allowed_person_types": ["individual", "fop", "company"]
    }
  },

  "party_modules": {
    "individual": {
      "label": "Фізична особа",
      "fields": [
        { "field": "name",    "label": "ПІБ",                               "required": true, "type": "text" },
        { "field": "address", "label": "Адреса проживання/реєстрації",      "required": true, "type": "text" },
        { "field": "id_doc",  "label": "Паспорт (серія/номер)",             "required": false, "type": "text" },
        { "field": "id_code", "label": "РНОКПП",                            "required": false, "type": "rnokpp" },
        { "field": "phone",   "label": "Телефон",                           "required": false, "type": "phone" },
        { "field": "email",   "label": "Email",                             "required": false, "type": "email" }
      ]
    },
    "fop": {
      "label": "ФОП",
      "fields": [
        { "field": "name",    "label": "ПІБ ФОП",                           "required": true, "type": "text" },
        { "field": "address", "label": "Адреса реєстрації ФОП",             "required": true, "type": "text" },
        { "field": "id_code", "label": "РНОКПП",                            "required": true, "type": "rnokpp" },
        { "field": "id_doc",  "label": "Паспорт (серія/номер)",             "required": false, "type": "text" },
        { "field": "phone",   "label": "Телефон",                           "required": false, "type": "phone" },
        { "field": "email",   "label": "Email",                             "required": false, "type": "email" }
      ]
    },
    "company": {
      "label": "Юридична особа",
      "fields": [
        { "field": "name",          "label": "Повна назва юр. особи",        "required": true, "type": "text" },
        { "field": "address",       "label": "Юридична адреса",              "required": true, "type": "text" },
        { "field": "id_code",       "label": "Код ЄДРПОУ",                   "required": true, "type": "edrpou" },
        { "field": "representative","label": "ПІБ директора / представника","required": false, "type": "text" },
        { "field": "id_doc",        "label": "Документ представника",        "required": false, "type": "text" },
        { "field": "phone",         "label": "Телефон",                      "required": false, "type": "phone" },
        { "field": "email",         "label": "Email",                        "required": false, "type": "email" }
      ]
    }
  },

  "contract_fields": [
    { "field": "subject",            "label": "Предмет нерозголошення",           "required": true, "type": "text" },
    { "field": "effective_date",     "label": "Дата набрання чинності",           "required": true, "type": "date" },
    { "field": "term_years",         "label": "Термін дії (років)",               "required": false, "type": "integer" },
    { "field": "term_months",        "label": "Термін дії (місяців)",             "required": false, "type": "integer" },
    { "field": "city",               "label": "Місто укладення договору",         "required": true, "type": "city" },
    { "field": "contract_date",      "label": "Дата укладення договору",          "required": true, "type": "date" },
    { "field": "penalty_amount",     "label": "Розмір штрафних санкцій",          "required": false, "type": "amount" },
    { "field": "confidential_info",  "label": "Опис конфіденційної інформації",   "required": false, "type": "text" },
    { "field": "exceptions",         "label": "Винятки з конфіденційності",       "required": false, "type": "text" },
    { "field": "return_period",      "label": "Термін повернення інформації",     "required": false, "type": "text" },
    { "field": "document_number",    "label": "Номер договору",                   "required": false, "type": "text" }
  ]
}
