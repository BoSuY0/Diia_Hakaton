    { "field": "notice_period_days",     "label": "Заходити до приміщення самостійно, попередньо узгодивши дату й час візиту з Орендарем (не менше ніж за 1 день) ",        "required": true  },
    { "field": "repair_notice_days",     "label": "Здійснювати капітальний ремонт, поліпшення приміщення (заборонено/за згодою сторін)",              "required": true  },
    { "field": "improvement_consent_type","label": "Обладнувати, оформлювати й поліпшувати приміщення (заборонено/за згодою сторін)",                "required": true  },
    { "field": "lock_change_notice",     "label": "Змінювати замки дверей приміщення та укріплювати двері (заборонено/за порядком заміни та повідомленням Орендодавця",        "required": true  },
    { "field": "sublease_consent_type",  "label": "Здавати приміщення або його частину в суборенду (заборонено/за згодою Орендодавця)",                  "required": true  },
    { "field": "act_signing_period",     "label": "Строк підписання акта приймання-передачі (протягом 3 календарних днів)", "required": true  },
    { "field": "term_change_consent",    "label": "Строк найму (можна змінити за згодою Сторін/не можна змінити)",                 "required": true  },
    { "field": "rent_price_month",       "label": "Орендна плата за користування приміщенням становить (1400 гривень)",                       "required": true  },
    { "field": "first_payment_date",     "label": "Дата першого платежу (05.08.2025)",                        "required": true  },
    { "field": "payment_form",           "label": "Форма оплати (на розрахунковий рахунок Орендодавця, готівка)",                                "required": true  },
    { "field": "payment_due_day",        "label": "Орендар здійснює оплату не пізніше ніж (1-го числа) ",                      "required": true  },
    { "field": "penalty_rate",           "label": "Пеня за прострочення (0,2%/день від суми заборгованості)",                "required": true  },
    { "field": "payment_delay_days",     "label": "Граничний строк прострочення (5 днів)",         "required": true  },
    { "field": "premises_return_deadline","label": "Строк передачі приміщення Орендарем після закінчення строку найму (протягом 1 дня)","required": true  }
  ]
}
