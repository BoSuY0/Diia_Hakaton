{
  "category_id": "lease_real_estate",
  "main_role": "lessor",

  "templates": [
    {
      "id": "lease_flat",
      "name": "Договір оренди нерухомого майна",
      "file": "lease_real_estate.docx"
    }
  ],

  "roles": {
    "lessor": {
      "label": "Орендодавець",
      "allowed_person_types": ["individual", "fop", "company"]
    },
    "lessee": {
      "label": "Орендар",
      "allowed_person_types": ["individual", "fop", "company"]
    }
  },

  "party_modules": {
    "individual": {
      "label": "Фізична особа",
      "fields": [
        { "field": "name",    "label": "ПІБ",                               "required": true  },
        { "field": "address", "label": "Адреса проживання/реєстрації",      "required": true  },
        { "field": "representative","label": "Представник",                 "required": false },
        { "field": "id_doc",  "label": "Паспорт (серія/номер)",             "required": false },
        { "field": "id_code", "label": "РНОКПП",                            "required": false },
        { "field": "iban",    "label": "IBAN рахунку (за наявності)",       "required": false },
        { "field": "phone",   "label": "Телефон",                           "required": false },
        { "field": "email",   "label": "Email",                             "required": false }
      ]
    },

    "fop": {
      "label": "ФОП",
      "fields": [
        { "field": "name",    "label": "ПІБ ФОП",                           "required": true  },
        { "field": "address", "label": "Адреса реєстрації ФОП",             "required": true  },
        { "field": "representative","label": "Представник",                 "required": false },
        { "field": "id_code", "label": "РНОКПП",                            "required": true  },
        { "field": "id_doc",  "label": "Паспорт (серія/номер)",             "required": false },
        { "field": "iban",    "label": "IBAN рахунку",                      "required": false },
        { "field": "phone",   "label": "Телефон",                           "required": false },
        { "field": "email",   "label": "Email",                             "required": false }
      ]
    },

    "company": {
      "label": "Юридична особа",
      "fields": [
        { "field": "name",          "label": "Повна назва юр. особи",        "required": true  },
        { "field": "address",       "label": "Юридична адреса",              "required": true  },
        { "field": "id_code",       "label": "Код ЄДРПОУ",                   "required": true  },
        { "field": "representative","label": "ПІБ директора / представника","required": false },
        { "field": "id_doc",        "label": "Документ представника",        "required": false },
        { "field": "iban",          "label": "IBAN рахунку",                 "required": false },
        { "field": "phone",         "label": "Телефон",                      "required": false },
        { "field": "email",         "label": "Email",                        "required": false }
      ]
    }
  },

  "contract_fields": [
    { "field": "document_number",        "label": "Номер договору",                              "required": true  },
    { "field": "city",                   "label": "Місто",                                       "required": true  },
    { "field": "contract_date",          "label": "Дата договору (5 серпня 2025)",             "required": true  },
    { "field": "purpose",                "label": "Цільове призначення приміщення (надання послуг/проживання)","required": true  },
    { "field": "object_address",         "label": "Адреса приміщення",                           "required": true  },
    { "field": "start_date",             "label": "Дата початку оренди",                         "required": true  },
    { "field": "end_date",               "label": "Дата закінчення оренди",                      "required": true  },
    { "field": "total_area_sqm",         "label": "Загальна площа приміщення, м²",               "required": true  },
